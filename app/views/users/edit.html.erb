<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div style="color: red;"><%= message %></div><br>
  <% end %>
<% end %>

<%= form_for @user do |form| %>
  Username: <%= form.text_field :username %>
  Email: <%= form.text_field :email %>
  Password: <%= form.password_field :password %>
  <%= form.submit "Edit" %>
<% end %>